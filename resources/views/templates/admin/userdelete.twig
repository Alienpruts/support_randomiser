{% extends'templates/base.twig' %}

{% block content %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Delete user?</div>
                <div class="panel-body">
                    <form action="{{ path_for('admin.userdelete', {'userid' : user.id }) }}" method="post" autocomplete="off">
                        <div class="form-group">
                            <p>Are you sure you want to delete user <strong>{{ user.naam }}</strong> ?</p>
                            <p>There is no way of retrieving deleted users!</p>
                        </div>
                        <button type="submit" class="btn btn-default">Confirm</button>
                        <a href="{{ path_for('admin.useroverview') }}" class="btn btn-default">Cancel</a>
                        {{ csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}