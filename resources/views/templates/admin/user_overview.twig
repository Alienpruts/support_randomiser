{% extends 'templates/base.twig' %}

{% block content %}

    <h1>//TODO User overview page</h1>
    <div>
        <a href="{{ path_for('admin.usercreate') }}"> Add new user</a>
    </div>

    <table class="table table-striped table-hover table-responsive">

        <thead>
        <tr>
            <th>id</th>
            <th>Naam</th>
            <th>Email</th>
            <th>Role</th>
            <th>Score</th>
            <th>Operations</th>
        </tr>
        </thead>
        <tbody class="table-striped">
        {% for user in users %}
            <tr>
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.naam }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.score }}</td>
                <td>
                    <a href="{{ path_for('admin.useredit', {'userid' : user.id}) }}">Edit</a>
                    <span> / </span>
                    <a href="{{ path_for('admin.userdelete', {'userid' : user.id}) }}">Delete</a>

                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
{% endblock %}