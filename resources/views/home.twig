{% extends'templates/base.twig' %}

{% block content %}

    <h1>Welcome to Support Randomiser</h1>
    <div> Current date : {{ date }}</div>
    <div> Current week number : {{ week.__toString() }}</div>

    <a href="{{ path_for('week.getweek', {'weeknr' : weeknrs.previous}) }}">previous</a>
    <a href="{{ path_for('week.getweek', {'weeknr' : weeknrs.next}) }}">next</a>
    <div class="row">
        {% for day in week %}
            {% if loop.index < 6 %}
                <div class="col-sm-2">
                    <span>{{ day.__toString() }}</span>
                    <span>{{ day.format('d/m/y') }}</span>
                </div>
            {% endif %}
        {% endfor %}

    </div>


{% endblock %}